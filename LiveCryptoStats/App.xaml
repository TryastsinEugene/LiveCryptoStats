<Application x:Class="LiveCryptoStats.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LiveCryptoStats"
             xmlns:converter="clr-namespace:LiveCryptoStats.Utilities"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>

        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/DarkTheme.xaml" />
                <ResourceDictionary Source="Styles/Text.xaml"/>
                <ResourceDictionary Source="Styles/Page.xaml"/>
                <ResourceDictionary Source="Styles/Button.xaml"/>
                <ResourceDictionary Source="Styles/Icon.xaml"/>
                <ResourceDictionary Source="Styles/GridTextStyle.xaml"/>
                <ResourceDictionary Source="Utilities/DataTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converter:StringPriceToColorConverter x:Key="PriceToColorConverter" />
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
