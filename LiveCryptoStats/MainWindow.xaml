<Window x:Class="LiveCryptoStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LiveCryptoStats.ViewModel"
        xmlns:Menu="clr-namespace:LiveCryptoStats.Utilities"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Live Crypto Stats" 
        Height="720" 
        Width="1080"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        >

    <Window.DataContext>
        <vm:NavigationVM />
    </Window.DataContext>

    <Border Background="#212529">
        
        
        <Grid>
            
            <!--Base Grid-->
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid HorizontalAlignment="Left"
                  Width="200">

                <DockPanel>


                    <!--// Logo and Title Bar -->

                    <TextBlock Text="Live Crypto Stats"
                               Style="{StaticResource Text_Style}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="25" 
                               DockPanel.Dock="Top"/>
                    
                    
                    <!--Separator-->

                    <Separator Margin="25"
                               DockPanel.Dock="Top"
                               Height="0.8"
                               Background="#DBDBDB" />
                    
                    <!--Buttons for Navigation-->

                    <StackPanel DockPanel.Dock="Top">


                        <!--// Home //-->

                        <Menu:Btn Style="{StaticResource BtnStyle}"
                                  Command="{Binding HomeCommand}"
                                  IsChecked="true"
                                  DockPanel.Dock="Top">

                            <Grid>
                              <Icon:PackIconMaterial Kind="Home" Style="{StaticResource Icon_Style}" />
                                        
                              <TextBlock Text="Home" Style="{StaticResource Text_Style}" />
                            </Grid>

                        </Menu:Btn>

                        <!--// Settings //-->

                         <Menu:Btn Style="{StaticResource BtnStyle}"
                                   Command="{Binding SettingsCommand}"
                                   DockPanel.Dock="Top">

                            <Grid>
                                <Icon:PackIconMaterial Kind="Cog" Style="{StaticResource Icon_Style}" />

                                <TextBlock Text="Settings" Style="{StaticResource Text_Style}" />
                            </Grid>

                        </Menu:Btn>

                    </StackPanel>


                    <!--Exit-->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                                   Command="{Binding SettingsCommand}"
                                   DockPanel.Dock="Bottom"
                                   >

                    <Grid>
                        <Icon:PackIconMaterial Kind="ExitRun" Style="{StaticResource Icon_Style}" />

                        <TextBlock Text="Exit" Style="{StaticResource Text_Style}" />
                    </Grid>

                    </Menu:Btn>
                </DockPanel>

            </Grid>

            
            <Grid Grid.Column="1">

                <ContentControl Grid.Row="1" x:Name="Pages"
                                Content="{Binding CurrentView}" />

            </Grid>

        </Grid>

    </Border>
</Window>
